	"version": "0.2.0",
	"configurations": [
		{
			"name": "cc - Compilar y depurar archivo activo",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/a.out",
			"args": ["1 2 4 3"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Habilitar la impresión con formato para gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: cc compilar archivo activo",
			"miDebuggerPath": "/usr/bin/gdb",
			"logging": {
				"trace": true,
				"traceResponse": true,
				"engineLogging": true
			}
		}
	]
}